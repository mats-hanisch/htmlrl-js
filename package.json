{
  "name": "htmlrl",
  "version": "1.0.1",
  "description": "A simple yet powerful HTML template utility library for Node.js",
  "type": "module",
  "sideEffects": false,
  "main": "./dist/cjs/index.js",
  "types": "./dist/esm/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && tsc --project tsconfig.esm.json && tsc --project tsconfig.cjs.json && node scripts/post-build.js",
    "dev": "tsx src/index.ts",
    "prepublishOnly": "npm run build"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "html",
    "template",
    "node",
    "typescript"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.11.30",
    "rimraf": "^6.1.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mats-hanisch/htmlrl-js.git"
  }
}
